{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "ScraperBackendService": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Extensions.Hosting": "Warning",
      "Microsoft.AspNetCore.Hosting.Diagnostics": "Error",
      "Microsoft.AspNetCore.Routing.EndpointMiddleware": "Error",
      "Microsoft.AspNetCore.StaticFiles": "Error",
      "Microsoft": "Warning",
      "System": "Warning"
    }
  },
  "Console": {
    "FormatterName": "simple",
    "FormatterOptions": {
      "SingleLine": true,
      "IncludeScopes": false,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss ",
      "UseUtcTimestamp": true,
      "MaxQueueLength": 200,
      "QueueFullWaitTime": 1000
    }
  },
  "ServiceConfig": {
    "Port": 8585,
    "Host": "0.0.0.0",
    "AuthToken": "",
    "TokenHeaderName": "X-API-Token",
    "EnableDetailedLogging": false,
    "MaxConcurrentRequests": 10,
    "HanimeMaxConcurrentRequests": 1,
    "DlsiteMaxConcurrentRequests": 1,
    "RequestTimeoutSeconds": 90
  }
}
